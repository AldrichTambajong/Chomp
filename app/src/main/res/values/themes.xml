<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cookbook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lighterAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorText</item>
        <item name="colorOnSecondary">@color/logoText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="Theme.Cookbook.ActionMenu" parent="Theme.Cookbook">
        <item name="actionMenuTextColor">@color/logoText</item>
        <item name="android:actionMenuTextColor">@color/logoText</item>
    </style>

    <style name="Theme.Cookbook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Action Bar Menu Text Color. -->
    <style name="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/logoText</item>
    </style>

    <style name="Theme.Cookbook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@color/logoText</item>
        <item name="android:itemTextAppearance">@color/logoText</item>
        <item name="android:icon">@color/logoText</item>
        <item name="android:itemBackground">@color/logoText</item>
        </style>

    <style name="Theme.Cookbook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/logoText</item>
        <item name="android:itemTextAppearance">@color/logoText</item>
    </style>

</resources>