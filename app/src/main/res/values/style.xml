<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="ResourceName">
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/logoColor</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/lighterAccent</item>
        <item name="android:textColorPrimary">@color/darkestBrown</item>
        <item name="android:textColorSecondary">@color/darkestBrown</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/logoColor</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="MainDrawerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ff000f</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FirebaseUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:buttonStyle">@style/FirebaseUI.Button</item>
        <item name="android:textColorLink">?attr/colorPrimary</item>
    </style>

    <style name="FirebaseUI.DefaultMaterialTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/logoColor</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/lighterAccent</item>
        <item name="colorError">@color/design_default_color_error</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FirebaseUI.Transparent" parent="FirebaseUI">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@color/fui_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FirebaseUI.WrapperStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">@dimen/fui_wrapper_padding_horiz</item>
        <item name="android:layout_marginRight">@dimen/fui_wrapper_padding_horiz</item>
    </style>

    <style name="FirebaseUI.TopProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo" parent="FirebaseUI">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>


    <style name="FirebaseUI.Button.AccountChooser.BaseButton">
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/logoColor</item>
        <item name="android:insetBottom">@dimen/fui_button_inset_bottom</item>
        <item name="android:insetTop">@dimen/fui_button_inset_top</item>
        <item name="android:insetLeft">@dimen/fui_button_inset_left</item>
        <item name="android:insetRight">@dimen/fui_button_inset_right</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/fui_auth_method_button_drawablePadding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">@dimen/fui_auth_method_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/fui_auth_method_button_margin</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.GoogleButton" parent="FirebaseUI.Button.AccountChooser.BaseButton">
        <item name="icon">@drawable/fui_ic_googleg_color_24dp</item>
        <item name="backgroundTint">@color/fui_bgGoogle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FirebaseUI.TextInputEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FirebaseUI.TextInputEditText.EmailField">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="AppTheme">AppTheme</style>
</resources>
